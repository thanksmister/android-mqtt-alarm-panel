<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/informationContainer"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <FrameLayout
            android:id="@+id/controlContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/informationContainer"
            android:layout_above="@+id/settingsContainer"
            android:baselineAligned="false"
            android:padding="8dp"/>
  
    <RelativeLayout
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="end"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">
        
        <ImageButton
                android:id="@+id/buttonLogs"
                style="@style/BorderlessButtonStyle"
                android:padding="8dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@color/dark_gray"
                android:layout_toEndOf="@+id/spaceButton"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_log_list_black_24dp"
                tools:ignore="ContentDescription"/>
        
        <android.support.v4.widget.Space
                android:id="@+id/spaceButton"
                android:layout_toEndOf="@+id/buttonSettings"
                android:layout_width="16dp"
                android:layout_height="24dp"/>

        <ImageButton
                android:id="@+id/buttonSettings"
                style="@style/BorderlessButtonStyle"
                android:padding="8dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@color/dark_gray"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_settings_black_24dp"
                tools:ignore="ContentDescription"/>
        
    </RelativeLayout>
    
    <FrameLayout
            android:id="@+id/triggeredView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            tools:visibility="gone"
            android:visibility="gone">
        
        <include
                android:id="@+id/alarmTriggeredView"
                layout="@layout/dialog_alarm_triggered_code"/>
        
    </FrameLayout>

    <FrameLayout
        android:id="@+id/screenSaverContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:visibility="visible"
        android:visibility="visible"/>

</RelativeLayout>