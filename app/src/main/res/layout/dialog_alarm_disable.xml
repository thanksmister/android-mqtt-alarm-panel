<com.thanksmister.iot.mqtt.alarmpanel.ui.views.AlarmDisableView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alarmDisableView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

    <View style="@style/DividerVertical"/>
    
    <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <View style="@style/DividerHorizontal"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/button1"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="@dimen/text_size_login"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>

            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button2"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="@dimen/text_size_login"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        />

            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button3"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="@dimen/text_size_login"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"/>

            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/DividerHorizontal"
                android:padding="0dp"
                android:layout_margin="0dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/button4"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="@dimen/text_size_login"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"/>


            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button5"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="@dimen/text_size_login"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        />


            </LinearLayout>


            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button6"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="@dimen/text_size_login"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"/>

            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/DividerHorizontal"
                android:padding="0dp"
                android:layout_margin="0dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/button7"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="@dimen/text_size_login"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"/>


            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button8"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="@dimen/text_size_login"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        />


            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button9"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="@dimen/text_size_login"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"/>

            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/DividerHorizontal"
                android:padding="0dp"
                android:layout_margin="0dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/buttonCancel"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="60dp"
                        android:text="@android:string/cancel"/>

            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button0"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLarge"
                        android:textSize="@dimen/text_size_login"
                        android:layout_gravity="center"
                        android:textColor="@color/dark_gray_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>

            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/buttonDel"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tint="@color/dark_gray"
                        android:src="@drawable/ic_backspace_black_32dp"/>

            </LinearLayout>

        </LinearLayout>

        <View style="@style/DividerHorizontal"/>

    </LinearLayout>

    <View style="@style/DividerVertical"/>

    <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_weight="1">

            <com.todddavies.components.progressbar.ProgressWheel
                android:id="@+id/countDownProgressWheel"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:gravity="center"
                ProgressWheel:barColor="@color/green"
                ProgressWheel:barWidth="8dp"
                ProgressWheel:contourColor="@color/gray_color"
                ProgressWheel:rimColor="@color/gray_color"
                ProgressWheel:rimWidth="8dp"
                ProgressWheel:textColor="@color/text"
                ProgressWheel:textSize="32sp" />

        </FrameLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical">

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/dark_gray"
                    android:id="@+id/pinCode1"
                    android:src="@drawable/ic_radio_button_unchecked_black_32dp"/>

            <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/dark_gray"
                    android:id="@+id/pinCode2"
                    android:src="@drawable/ic_radio_button_unchecked_black_32dp"/>

            <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/dark_gray"
                    android:id="@+id/pinCode3"
                    android:src="@drawable/ic_radio_button_unchecked_black_32dp"/>

            <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:tint="@color/dark_gray"
                    android:id="@+id/pinCode4"
                    android:src="@drawable/ic_radio_button_unchecked_black_32dp"/>

        </LinearLayout>

    </LinearLayout>

</com.thanksmister.iot.mqtt.alarmpanel.ui.views.AlarmDisableView>