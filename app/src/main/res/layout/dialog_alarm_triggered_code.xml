<com.thanksmister.androidthings.iot.alarmpanel.ui.views.AlarmTriggeredView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/red"
        android:padding="16dp"
        android:orientation="horizontal">

    <View style="@style/DividerVertical"/>

    <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <View style="@style/DividerHorizontal"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/button1"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="@dimen/text_size_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>

            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button2"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="@dimen/text_size_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        />

            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button3"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="@dimen/text_size_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"/>

            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/DividerHorizontal"
                android:padding="0dp"
                android:layout_margin="0dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/button4"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="@dimen/text_size_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"/>


            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button5"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="@dimen/text_size_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        />


            </LinearLayout>


            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button6"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="@dimen/text_size_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"/>

            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/DividerHorizontal"
                android:padding="0dp"
                android:layout_margin="0dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/button7"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="@dimen/text_size_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"/>


            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button8"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="@dimen/text_size_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        />


            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button9"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="@dimen/text_size_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"/>

            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/DividerHorizontal"
                android:padding="0dp"
                android:layout_margin="0dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/buttonCancel"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="22dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="60dp"
                        android:text="@android:string/cancel"/>

            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/button0"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                <TextView
                        style="?android:textAppearanceLargeInverse"
                        android:textSize="@dimen/text_size_login"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>

            </LinearLayout>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/DividerVertical"
                    android:padding="0dp"
                    android:layout_margin="0dp"/>

            <LinearLayout
                    android:id="@+id/buttonDel"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tint="@color/white"
                        android:src="@drawable/ic_backspace_black_32dp"/>

            </LinearLayout>

        </LinearLayout>

        <View style="@style/DividerHorizontal"/>

    </LinearLayout>

    <View style="@style/DividerVertical"/>

    <LinearLayout
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/codeTitle"
                style="@style/TextAppearance.AppCompat.Large.Inverse"
                android:textSize="84sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="ALARM"/>

        <TextView
                android:id="@+id/codeDescription"
                style="@style/TextAppearance.AppCompat.Large.Inverse"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="Enter code to dismiss"
                android:text="@string/dialog_alarm_triggered"/>

    </LinearLayout>

</com.thanksmister.androidthings.iot.alarmpanel.ui.views.AlarmTriggeredView>