<com.thanksmister.iot.mqtt.alarmpanel.ui.views.AlarmPendingView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <FrameLayout
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_round_white">
    
        <com.todddavies.components.progressbar.ProgressWheel
                android:id="@+id/countDownProgressWheel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:text="99"
                ProgressWheel:textColor="@color/text"
                ProgressWheel:textSize="20sp"
                ProgressWheel:rimColor="@color/gray_color"
                ProgressWheel:contourColor="@color/gray_pressed"
                ProgressWheel:barLength="54dp"
                ProgressWheel:barColor="@color/gray_pressed"
                ProgressWheel:barWidth="10dp"
                ProgressWheel:rimWidth="10dp"
                ProgressWheel:spinSpeed="3dp"/>

        </FrameLayout>
    

</com.thanksmister.iot.mqtt.alarmpanel.ui.views.AlarmPendingView>