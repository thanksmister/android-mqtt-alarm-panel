<com.thanksmister.iot.mqtt.alarmpanel.ui.views.AlarmCodeView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alarmCodeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="16dp">

    <include
        layout="@layout/view_keypad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <android.support.v4.widget.Space
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_weight="0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/codeTitle"
            style="@style/WizardPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            tools:text="Please enter the new alarm code." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="32dp">

            <ImageView
                android:id="@+id/pinCode1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_radio_button_unchecked_black"
                android:tint="@color/dark_gray" />

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/pinCode2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_radio_button_unchecked_black"
                android:tint="@color/dark_gray" />

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/pinCode3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_radio_button_unchecked_black"
                android:tint="@color/dark_gray" />

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/pinCode4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_radio_button_unchecked_black"
                android:tint="@color/dark_gray" />

        </LinearLayout>

    </RelativeLayout>

</com.thanksmister.iot.mqtt.alarmpanel.ui.views.AlarmCodeView>